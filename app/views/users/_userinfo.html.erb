
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-9">
      <h2>User info</h2>
      <%= image_tag @user.get_image(100,100) %>
        <table class="table">
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </table>
        <div class="row">
          <%= link_to "", edit_user_path(user), class: 'btn btn-outline-secondary btn-block fas fa-user-cog' %>
          <!-- link_to 'edit', edit_user_path(@user.id) %>/-->
        </div>
    </div>
  </div>
</div>