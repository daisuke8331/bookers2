<% if @book.errors.any? %>
  <%= @book.errors.count %> error occurred
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<div class="container px-5 px-sm-0">
  <div class="row">


    <div class="col-md-3">

      <%= render 'users/userinfo', user: @user %>

      <%= render 'books/newbook', book: @book %>

    </div>

    <div class="col-md-8 offset-md-1">

      <h2>Books</h2>
        <table>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user.id) do %>
                <%= image_tag book.user.get_image(80,80) %>
              <% end %>
            </td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </table>
    </div>
  </div>
</div>
