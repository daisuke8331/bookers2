<div class="container px-5 px-sm-0">
  <div class="row">


    <div class="col-md-3">

      <%= render 'users/userinfo', user: @user %>

      <%= render 'books/newbook', book: @book %>

    </div>

    <div class="col-md-8 offset-md-1">

      <h2>Book detail</h2>
      <table>
        <tr>
          <td>
            <%= link_to user_path(@user) do %>
            <%= image_tag @user.get_image(100,100) %>
            <br><%= @user.name %>
            <% end %>
          </td>
          <td>
            <%= link_to book_path(@book) do %>
            <%= @book.title %>
            <% end %>
          </td>
          <td><%= @book.body %></td>
          <td>
            <% if @book.user == current_user %>
              <%= link_to "Edit", edit_book_path(@book.id),class:"btn-sm btn-success"%>
            <% end %>
          </td>
          <td>
            <% if @book.user == current_user %>
              <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか?" %>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>
